{% extends 'base.html.twig' %}

{% block title %}BlogPost{% endblock %}

{% block body %}
    <h1>BlogPost</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ blog_post.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ blog_post.Title }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ blog_post.Content }}</td>
            </tr>
            <tr>
                <th>Banniere</th>
                <td>{{ blog_post.Banniere }}</td>
            </tr>
            <tr>
                <th>CreateAt</th>
                <td>{{ blog_post.CreateAt ? blog_post.CreateAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Author</th>
                <td>{{ blog_post.Author }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('blog_post_index') }}">back to list</a>

    <a href="{{ path('blog_post_edit', {'id': blog_post.id}) }}">edit</a>

    {{ include('blog_post/_delete_form.html.twig') }}
{% endblock %}
